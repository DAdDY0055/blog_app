<h1>ログイン</h1>

<% flash.each do |key, value| %>
  <div class="container">
    <dl>
      <h2 class="error">
        <%= content_tag(:div, value, class: "#{key}") %>
      </h2>
    </dl>
  </div>
<% end %>

<h2>ログイン情報を入力してください</h2>

<div>
<%= form_with(scope: :session, url: sessions_path, local: true) do |f| %>

    <li><%= f.label :email %><%= f.email_field :email %></li>
    <li><%= f.label :password %><%= f.password_field :password %></li>

  <%= f.submit "Log in" %>
</div>

<% end %>